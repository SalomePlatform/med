top_srcdir=@top_srcdir@
top_builddir=../..
srcdir=@srcdir@
VPATH=.:$(srcdir):$(srcdir)/tests


MACHINE=PCLINUX

@COMMENCE@

EXPORT_PYSCRIPTS = \


EXPORT_HEADERS = \
MEDSPLITTER_Topology.hxx \
MEDSPLITTER_MESHCollection.hxx \
MEDSPLITTER_MESHCollectionDriver.hxx \
MEDSPLITTER_ParallelTopology.hxx \
MEDSPLITTER_Graph.hxx\
MEDSPLITTER_UserGraph.hxx\
MEDSPLITTER_API.hxx \
MEDSPLITTER.hxx

ifeq ($(ENABLE_METIS),yes)
  EXPORT_HEADERS += MEDSPLITTER_METISGraph.hxx
endif
ifeq ($(ENABLE_SCOTCH),yes)
  EXPORT_HEADERS += MEDSPLITTER_SCOTCHGraph.hxx
endif

# Libraries targets

LIB=libmedsplitter.la

LIB_SRC = \
MEDSPLITTER_MESHCollection.cxx \
MEDSPLITTER_MESHCollectionDriver.cxx \
MEDSPLITTER_ParallelTopology.cxx \
MEDSPLITTER_Graph.cxx\
MEDSPLITTER_UserGraph.cxx\
MEDSPLITTER_API.cxx

ifeq ($(ENABLE_METIS),yes)
  LIB_SRC += MEDSPLITTER_METISGraph.cxx
endif
ifeq ($(ENABLE_SCOTCH),yes)
  LIB_SRC += MEDSPLITTER_SCOTCHGraph.cxx
endif

# Executables targets
BIN = medsplitter 
BIN_SRC = 
BIN_SERVER_IDL = 
BIN_CLIENT_IDL = 

TEST_PROGS =  

LDFLAGS+= -L$(top_builddir)/lib@LIB_LOCATION_SUFFIX@/salome 
LDFLAGSFORBIN+= -L$(top_builddir)/lib@LIB_LOCATION_SUFFIX@/salome

CPPFLAGS+=$(MED2_INCLUDES) $(HDF5_INCLUDES)

CXXFLAGS+=@CXXTMPDPTHFLAGS@
CPPFLAGS+=$(BOOST_CPPFLAGS)
#LDFLAGS+=$(MED2_LIBS) $(HDF5_LIBS) 
# change motivated by the bug KERNEL4778.
LDFLAGS+=$(MED2_LIBS) $(HDF5_LIBS) -lmed_V2_1 $(STDLIB) -lmedmem

#LDFLAGSFORBIN+=$(MED2_LIBS) $(HDF5_LIBS)
# change motivated by the bug KERNEL4778.
LDFLAGSFORBIN+=-lm $(MED2_LIBS) $(HDF5_LIBS) -lmed_V2_1 -lmedmem $(BOOST_LIBS)
ifeq ($(BOOST_PROGRAM_OPTIONS_LIB),yes)
  LDFLAGSFORBIN+= -lboost_program_options
endif

ifeq ($(ENABLE_METIS),yes)
  CPPFLAGS+= $(METIS_CPPFLAGS)
  LDFLAGS+= $(METIS_LIBS)
  LDFLAGSFORBIN+= $(METIS_LIBS)
endif
ifeq ($(ENABLE_SCOTCH),yes)
  CPPFLAGS+= $(SCOTCH_CPPFLAGS)
  LDFLAGS+= $(SCOTCH_LIBS)
  LDFLAGSFORBIN+= $(SCOTCH_LIBS)
endif

ifeq ($(MED_WITH_KERNEL),yes)
  CPPFLAGS+= ${KERNEL_CXXFLAGS}
  CXXFLAGS+= ${KERNEL_CXXFLAGS}
  LDFLAGS+= ${KERNEL_LDFLAGS} -lSALOMELocalTrace 
  LDFLAGSFORBIN+= ${KERNEL_LDFLAGS} -lSALOMELocalTrace -lSALOMEBasics
endif

LIBSFORBIN=$(BOOSTLIBS)

LIBS=

# build create_mesh :
bin: 

@CONCLUDE@
